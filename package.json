{
  "name": "borgptron-core-titanium",
  "version": "2.0.0",
  "description": "Borgptron V2: Stateless Telegram Bot. Stack: Cloudflare Workers + Grammy + D1 (SQLite).",
  "main": "src/index.ts",
  "scripts": {
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create borgptron-db",
    "db:migrate": "wrangler d1 execute borgptron-db --file=schema.sql"
  },
  "dependencies": {
    "grammy": "^1.30.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "typescript": "^5.6.2",
    "wrangler": "^3.78.0",
    "@types/node": "^20.0.0"
  }
}
